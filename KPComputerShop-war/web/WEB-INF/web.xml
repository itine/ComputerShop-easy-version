<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <security-role-ref>
            <description/>
            <role-name>/products.xhtml</role-name>
            <role-link>client</role-link>
        </security-role-ref>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.sql.SQLNonTransientConnectionException</exception-type>
        <location>/badConnectionToDataBase.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>403</exception-type>
        <location>/403.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>admin 1</display-name>
        <web-resource-collection>
            <web-resource-name>admin1 </web-resource-name>
            <description/>
            <url-pattern>/adminPanel.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>client1</display-name>
        <web-resource-collection>
            <web-resource-name>client1</web-resource-name>
            <description/>
            <url-pattern>/clientOrders.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>client2</web-resource-name>
            <description/>
            <url-pattern>/basket.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>client</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>orderManager1</display-name>
        <web-resource-collection>
            <web-resource-name>orderManager1</web-resource-name>
            <description/>
            <url-pattern>/allOrders.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>orderManager</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>productManager1</display-name>
        <web-resource-collection>
            <web-resource-name>productManager1</web-resource-name>
            <description/>
            <url-pattern>/editProduct.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>productManager2</web-resource-name>
            <description/>
            <url-pattern>/addProduct.xhtml</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>productManager</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>orderManager</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>client</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
</web-app>
